{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "allowJs": true,
        "outDir": "dist",
        "target": "es2015",
        "lib": ["es2015"],
        "baseUrl": ".",
        "paths": {
            "*": [
                "src/types/*"
            ]
        }
    },
    "compileOnSave": true,
    "include": [
        "src/**/*",
    ],
    "exclude": [
        "node_modules"
    ]
}